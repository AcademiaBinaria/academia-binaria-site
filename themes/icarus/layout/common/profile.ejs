                <% if(theme.customize.social_links) { %>
                    <div class="profile-block social-links">
                        <table>
                            <tr>
                                <% var tooltipClass=theme.customize.social_link_tooltip===false ? ''
                                   : 'class=tooltip' ; %>
                                    <% for(var i in theme.customize.social_links) { %>
                                        <td>
                                            <a href="<%- url_for(theme.customize.social_links[i]) %>"
                                               target="_blank"
                                               title="<%= i %>"
                                               <%=tooltipClass %>> <i class="fa fa-<%= i %>"></i>
                                            </a>
                                        </td>
                                        <% } %>
                            </tr>
                        </table>
                    </div>
                    <% } %>
            </div>
        </aside>