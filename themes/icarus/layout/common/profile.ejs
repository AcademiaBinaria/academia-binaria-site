<% var profile=theme.customize.profile; %>
    <% var tagCount=site.tags.filter(function(tag) { return tag.length; }).length; %>
        <aside id="profile">
            <div class="inner profile-inner">
                <div class="base-info profile-block">
                    <img id="avatar"
                         src="<%= ( profile.gravatar ? gravatar(profile.gravatar, 128) : url_for(profile.avatar)) %>" />
                    <h2 id="name">
                        <%= profile.author %>
                    </h2>
                    <h3 id="title">
                        <%= profile.author_title %>
                    </h3>
                    <span id="location"><i class="fa fa-map-marker"></i>
                        <%= profile.location %>
                    </span>
                    <a id="follow"
                       target="_blank"
                       href="<%= profile.follow %>">
                        <%= __('profile.follow') %>
                    </a>
                </div>
                <div class="article-info profile-block">
                    <p style="margin: 10px;"> <a target="_blank"
                           href="https://trainingit.es//curso-angular-escalable/index.php?promo=angular.builders">Curso
                            Angular Escalable</a></p>
